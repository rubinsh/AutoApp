    <li ng-repeat="td in tableData" ng-click="navigate(td.link)" class="list-group-item">
    {{td.title}}
    </li>
  </ul> -->
  <input type="hidden" value="{{images[0].imageUrl}}" id="customImageUrl1"/>
  <input type="hidden" value="{{images[1].imageUrl}}" id="customImageUrl2"/>
  <input type="hidden" value="{{model_id}}" id="modelId"/>
  <input type="hidden" value="{{model.CrmModelId}}" id="crmModelId"/>
  <input type="hidden" value="{{model.CrmBrandId}}" id="crmBrandId"/>
  <input type="hidden" value="{{model.BrandID}}" id="brandId"/>
  <input type="hidden" value="{{model.name}}" id="modelName"/>
  <iframe ng-src="{{mako_url}}" frameBorder="0" width="1" height="1"></iframe>
  <div ng-if="model.IsBannerActive" id="auto-bottom-ad-container" class="navbar navbar-default navbar-fixed-bottom">
    <iframe src="{{BannerUrl}}" style="position: absolute; top: 0; left: 0; width: 100%; border: none;"></iframe>
  </div>
</div>

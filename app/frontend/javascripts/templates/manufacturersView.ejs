<div ng-controller="ManufacturersCtrl" class="manf-page" ng-show="manufacturers">
  <h2>בחר יצרן</h2>

  <div ng-click="selectMF(manufacturer)" ng-repeat="manufacturer in manufacturers" class="manf-list-item" >
    <div style="display: flex; padding-left: 10px;">
      <div style="flex: 80px">
        <img ng-src="{{manufacturer.logoUrl}}" />
      </div>
      <div style="flex: 100%; display: flex; justify-content: space-between;">
        <h3 style="color: #2C2C2C; margin-right: 10px;">{{manufacturer.name}}</h3>
        <img src="/assets/images/arrow-left-search-2.png" height="39" style="margin: 12.5px 0 0 0" />
      </div>
    </div>
  </div>
</div>

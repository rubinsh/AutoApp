<div ng-controller="ArticlesCategoryCtrl" ng-show="articles.length" class="articles-list" infinite-scroll="addMoreArticles()">
  <div class="row article-header">
    <div class="col-xs-12 text-right">
      <h3>{{categoryName}}</h3>
    </div>
  </div>

  <div ng-repeat="article in articles" class="row car-list-item" ng-click="showArticle(article)">
    <div ng-if="$index%3 == 1" class="inline-ad" style="margin-bottom:5px;border-bottom: #222 solid 1px;">
      <div class="auto-ad-container big-ad inline" style="height: 250px;" ng-if="showBanner()">
        <iframe ng-src="{{getBigBannerUrl($id+digest)}}" style="width: 100%; border: none; height:250px;"></iframe>
      </div>
    </div>
    <div class="col-xs-6 col-xxs">
      <img  class="img-responsive" ng-src="{{article.imageUrl}}">
    </div>
    <div class="col-xs-6 col-xxs">
      <h4>{{article.title}}</h4>
      <p>{{article.subTitle}}</p>
    </div>
  </div>
  <div ng-show="busy"  class="text-center"><h4>טוען כתבות נוספות...</h4></div>
</div>
<iframe frameBorder="0" height="1" width="1" src="http://mobileapp.mako.co.il/metricsCall.html?vcmId=Auto_1018620396&channelId=Auto&contentType=Auto_content&platform=mobile"></iframe>

<div ng-controller="CatalogCtrl" class="catalog">
  <br/>
  <div class="row">
    <div class="col-xs-1"></div>
    <button type="button" ng-click="selectManufacturer()" class="btn btn-danger btn-lg col-xs-10">
      <div class="col-xs-6 text-right">בחר יצרן</div>
      <div class="col-xs-6 text-left">{{manufacturerName}}</div>
    </button>
  </div>
  <br/>
  <div ng-controller="AllManufacturerModelsCtrl" ng-cloak>
    <div ng-show="!models && showLoading">
      <h3>טוען דגמים...</h3>
    </div>
    <div ng-show="models">
      <h2>בחר דגם:</h2>
      <div ng-include=" '_modelsList' "></div>
    </div>
  </div>
</div>

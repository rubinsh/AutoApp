    <div ng-show="models">
      <h2>בחר דגם:</h2>
      <div ng-repeat="model in models">
        <div class="manf-list-item" style="display: flex;" ng-click="setModel(model)">
          <img class="img-responsive " ng-src="{{model.image_url}}" >
          <div style="flex: 100%; margin-right: 10px;">
            <h4 class="model-text">{{model.name}}</h4>
            <p class="price-text" texthtmlparser texthtml="{{model.price}}"></p>
          </div>
        </div>
      </div>
    </div>
